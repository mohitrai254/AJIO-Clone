# create root .gitignore (will not overwrite if it exists)
if (-not (Test-Path .gitignore)) {
  @"
# Node
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-lock.yaml

# build outputs
dist/
build/
.vite/
.out/
.next/

# envs and secrets
.env
.env.*        # .env.local, .env.production, etc.
*.env   
.env.local
.env.*.local

# OS / editors
.DS_Store
Thumbs.db
.vscode/
.idea/

# logs
logs/
*.log

# optional: ignore frontend/backend node_modules if present
/frontend/node_modules/
/backend/node_modules/
"@ | Out-File -Encoding utf8 .gitignore
}
